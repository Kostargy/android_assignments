<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.kostargy.assignment_2.Main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
            >
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/teamA"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                  />

                <TextView
                    android:id="@+id/pointsa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:layout_marginBottom="24dp"
                    android:textSize="60sp"
                    android:textColor="#000"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/points3"
                    android:onClick="threea"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:background="@color/colorPrimary"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/points2"
                    android:onClick="twoa"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:background="@color/colorPrimary"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/freeThrow"
                    android:onClick="freea"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
            >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/teamB"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                />
                <TextView
                    android:id="@+id/pointsb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="60sp"
                    android:layout_marginBottom="24dp"
                    android:textColor="#000"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/points3"
                    android:onClick="threeb"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:background="@color/colorPrimary"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/points2"
                    android:onClick="twob"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:background="@color/colorPrimary"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/freeThrow"
                    android:onClick="freeb"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:paddingBottom="32dp"
            android:gravity="center_horizontal|bottom">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:onClick="reset"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
